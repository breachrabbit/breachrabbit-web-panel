# Database
DATABASE_URL="postgresql://hostpanel:password@localhost:5432/hostpanel"

# Redis
REDIS_URL="redis://localhost:6379"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-random-secret-here-use-openssl-rand-base64-32"

# OpenLiteSpeed API
OLS_API_URL="http://localhost:7080"
OLS_API_USER="admin"
OLS_API_PASS="your-ols-admin-password"

# Aeza API (optional)
AEZA_API_KEY="your-aeza-api-key"
AEZA_API_URL="https://api.aeza.net/v1"

# Server Configuration
SERVER_ROOT="/var/www"
BACKUP_ROOT="/var/backups/hostpanel"
LOGS_ROOT="/var/log/hostpanel"

# SSL Configuration
ACME_EMAIL="admin@example.com"
ACME_SERVER="letsencrypt" # or zerossl

# WordPress Defaults
WP_DEFAULT_ADMIN_EMAIL="admin@example.com"
WP_DEFAULT_PHP_VERSION="8.2"
WP_DEFAULT_MEMORY_LIMIT="256M"

# Monitoring (optional)
PROMETHEUS_URL="http://localhost:9090"
LOKI_URL="http://localhost:3100"

# Email Notifications (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="HostPanel <noreply@yourpanel.com>"

# Telegram Notifications (optional)
TELEGRAM_BOT_TOKEN="your-bot-token"
TELEGRAM_CHAT_ID="your-chat-id"

# Security
RATE_LIMIT_MAX="100" # requests per minute
SESSION_MAX_AGE="86400" # 24 hours in seconds

# Features Flags
ENABLE_TERMINAL="true"
ENABLE_GIT_DEPLOY="true"
ENABLE_DOCKER_PROXY="true"
ENABLE_MONITORING="true"

# Public URL (for client facing)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Breach Rabbit HostPanel Pro"
