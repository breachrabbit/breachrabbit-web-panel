# App
NODE_ENV=production
AUTH_SECRET=generate-random-64-char-secret-here
AUTH_URL=https://panel.example.com
AUTH_TRUST_HOST=true
INSTALLER_TOKEN=one-time-setup-token

# Database (Panel)
DATABASE_URL=postgresql://panel:password@localhost:5432/hostpanel

# Redis
REDIS_URL=redis://localhost:6379

# OpenLiteSpeed
OLS_API_URL=http://localhost:7080
OLS_API_USER=admin
OLS_API_PASS=your-ols-admin-password

# Server paths
SERVER_ROOT=/var/www
BACKUP_ROOT=/var/backups/panel

# SSL (acme.sh)
ACME_EMAIL=admin@example.com

# Monitoring (optional)
PROMETHEUS_URL=http://localhost:9090

# Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASS=app-password

TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id
