# Server Configuration
SERVER_ROOT="/var/www"
BACKUP_ROOT="/var/backups/breachrabbit"
LOGS_ROOT="/var/log/breachrabbit"

# SSL Configuration
ACME_EMAIL="admin@breachrabbit.pro"
ACME_SERVER="letsencrypt"

# WordPress Defaults
WP_DEFAULT_ADMIN_EMAIL="admin@breachrabbit.pro"
WP_DEFAULT_PHP_VERSION="8.3"
WP_DEFAULT_MEMORY_LIMIT="256M"

# Monitoring (optional)
PROMETHEUS_URL="http://localhost:9090"
LOKI_URL="http://localhost:3100"

# Email Notifications (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="Breach Rabbit HostPanel <noreply@breachrabbit.pro>"

# Telegram Notifications (optional)
TELEGRAM_BOT_TOKEN="your-bot-token"
TELEGRAM_CHAT_ID="your-chat-id"

# Security
RATE_LIMIT_MAX="100"
SESSION_MAX_AGE="86400"

# Features Flags
ENABLE_TERMINAL="true"
ENABLE_GIT_DEPLOY="true"
ENABLE_DOCKER_PROXY="true"
ENABLE_MONITORING="true"

# Public URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"
